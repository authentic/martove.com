      </div>
      <section class="span3 sidebar secondary-column">
        <aside class="widget">
          <h5 class="short_headline"><span>православный календарь</span></h5>

          <p><strong>
            <script language="Javascript">print_day();</script>
            <span class="text-error"><script language="Javascript">print_holiday();</script></span></strong></p>
          <p><em>
            <script language="Javascript">print_post();</script>
            <script language="Javascript">print_trapeza();</script>
          </em></p>
          <figure class="center">
            <script language="Javascript">print_img();</script>
            <figcaption class="center">
              <script language="Javascript">print_podpis();</script>
            </figcaption>
          </figure>
        </aside>
        <aside class="widget clearfix">
          <h5 class="short_headline"><span>Объявления</span></h5>


        </aside>
        <aside class="widget clearfix">
          <h5 class="short_headline"><span>Погода</span></h5>

          <div class="center">
            <div id="MeteoInformerWrap">
              <script type="text/javascript" src="http://meteo.ua/var/informers.js"></script>
              <script type="text/javascript">
                  makeMeteoInformer("http://meteo.ua/informer/get.php?cities=24947&w=110&lang=ru&rnd=1&or=vert&clr=19&dt=today&style=modern", 110, 438);
              </script>
            </div>
          </div>
        </aside>

        <aside class="widget clearfix">
          <h5 class="short_headline"><span>Новости</span></h5>

        </aside>

      </section>

      <section class="span3 sidebar tertiary-column" id="tertiary-nav">
        <% if @blog_posts.any? %>
            <aside class="widget">

              <h5 class="short_headline"><span>статьи</span></h5>

              <div class="sidebar-tabs">
                <ul class="tabs">
                  <li class="tab"><a href="#tab-latest">Последние статьи</a></li>
                  <li class="tab"><a href="#tab-tags">Теги</a></li>
                </ul>
                <div class="panels">
                  <div id="tab-latest">
                    <ul id="blogposts" class="blogposts clearfix">

                      <% @blog_posts.each do |post| %>
                          <li> <span class="date"> <span class="day"><%= Russian::strftime(post.published_at.to_date, "%d") %></span> <span class="month"> <%= Russian::strftime(post.published_at, "%b") %>
</span> <span class="year"><%= Russian::strftime(post.published_at, "%Y") %></span> </span>

                            <h3><%= link_to post.title, refinery.blog_post_path(post) %>
                            </h3>

                          </li>

                      <% end %>
                    </ul>
                  </div>
        <% end %>
        <% if @tags.any? %>
            <div id="tab-tags" class="tag-wrapper">
              <nav id='tags'>
                <% tag_cloud(@tags, %w(tag1 tag2 tag3 tag4)) do |tag, css_class| %>
                    <%= link_to tag.name, refinery.blog_tagged_posts_path(tag.id, tag.name.parameterize), :class => "tag" %>
                <% end %>
              </nav>
        <% end %>
        </div>
        </div>
        </div>
        </aside>
      </section>
    </div>

  </div>
</div>